<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">

	<TextView
		android:id="@+id/question_tv"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Hello World!"
		android:textSize="24sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<Button
		android:id="@+id/true_btn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="8dp"
		android:text="true"
		app:layout_constraintEnd_toStartOf="@+id/vertical_half_guideline"
		app:layout_constraintTop_toBottomOf="@+id/question_tv" />

	<Button
		android:id="@+id/false_btn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:text="false"
		app:layout_constraintStart_toStartOf="@+id/vertical_half_guideline"
		app:layout_constraintTop_toBottomOf="@+id/question_tv" />

	<Button
		android:id="@+id/next_btn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:text="next"
		app:layout_constraintStart_toStartOf="@+id/vertical_half_guideline"
		app:layout_constraintTop_toBottomOf="@+id/true_btn" />

	<Button
		android:id="@+id/prev_btn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="8dp"
		android:text="prev"
		app:layout_constraintEnd_toStartOf="@+id/vertical_half_guideline"
		app:layout_constraintTop_toBottomOf="@+id/true_btn" />

	<Button
		android:id="@+id/cheat_btn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="8dp"
		android:text="cheat"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/next_btn" />

	<android.support.constraint.Guideline
		android:id="@+id/vertical_half_guideline"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.5" />

</android.support.constraint.ConstraintLayout>
